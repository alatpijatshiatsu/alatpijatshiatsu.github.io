---
import { Icon } from "astro-icon/components";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://alatpijatastro.github.io",
    description: "Visit website kami",
    icon: "mdi:home",
  },
  {
    url: "https://www.instagram.com/alatpijat_shiatsu25?igsh=N3d4dWRtOHkxMXVt",
    description: "Kontak kami di Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://www.facebook.com/profile.php?id=61568806091192&mibextid=ZbWKwL",
    description: "Kontak kami di Facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://wa.me/6281460467743?text=Halo%2C%20saya%20tertarik%20ingin%20membeli%20Alat%20Pijat%20Shiatsu-nya%2C%20apakah%20masih%20tersedia%3F",
    description: "Kontak kami melalui WhatsApp",
    icon: "fa-brands:whatsapp",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
